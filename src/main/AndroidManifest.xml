<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.quizgame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bilgi_yarismasi"
        android:label="@string/bilgi_yarismasi"
        android:roundIcon="@drawable/bilgi_yarismasi"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizGame"
        tools:targetApi="34">
        <activity
            android:name=".Score_Page"
            android:exported="false" />
        <activity
            android:name=".Quiz_Page"
            android:exported="false" />
        <activity
            android:name=".Forgot_Password"
            android:exported="false"
            android:parentActivityName=".Login_Page"
            android:theme="@style/Theme.QuizGame" />
        <activity
            android:name=".sign_up_page"
            android:exported="false"
            android:parentActivityName=".Login_Page" />
        <activity
            android:name=".Login_Page"
            android:exported="false" />
        <activity
            android:name=".Splash_Screen"
            android:exported="true"
            android:theme="@style/Theme.QuizGame">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>